@page
@using Ftl.SalesCrm.Localization;
@using Ftl.SalesCrm.Permissions;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.Extensions.Localization;
@model Ftl.SalesCrm.Web.Pages.Contacts.IndexModel
@inject IStringLocalizer<SalesCrmResource> L
@inject IAuthorizationService AuthorizationService
@section scripts{
    <abp-script src="/Pages/Contacts/Index.js"></abp-script>
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md"_6">
                <abp-card-title>@L["Contacts"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(SalesCrmPermissions.Contacts.Create))
                {
                    <abp-button id="NewContactButton"
                            text="@L["NewContact"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ContactsTable">
        </abp-table>
    </abp-card-body>
</abp-card>